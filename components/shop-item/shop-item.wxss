.shop-item {
  width: 100%;
}
.shop-item .item {
  box-sizing: border-box;
  padding: 20rpx;
  width: 40vw;
  background-color: #f3fbfc;
}
.shop-item .item image {
  width: 100%;
  height: 250rpx;
  background-color: #999999;
  border-radius: 10rpx;
}
.shop-item .item .price {
  display: flex;
  align-items: center;
}
.shop-item .item .price .old {
  color: #999999;
  text-decoration: line-through;
  padding-left: 20rpx;
  font-size: 24rpx;
}
.shop-item .item .price .new {
  color: #1296db;
}
.shop-item .item .hot {
  padding: 10rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  border-radius: 10rpx;
}
