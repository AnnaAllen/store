<view class="index">
  <swiper class="swiper-box" autoplay="true">
    <swiper-item wx:for="{{swiperArr}}" wx:key="index" >
      <image style="width: 100%; height: 100%;" src="{{item}}" mode="aspectFill"></image>
    </swiper-item>
  </swiper>
  <!-- 跳转到点单 -->
  <view class="jumpToOrder">
    <view class="jump-box">
      <view class="jump-icon">
        <image src="../../asset/image/zhenzhunaicha.png"></image>
      </view>
      <view class="jump-title">
        <view class="top">卓越点单</view>
        <view class="bottom">自助点单 <text  decode="true"> &nbsp; </text>快速下单</view>
      </view>
    </view>
  </view>
